h1 {{title}}
div.add
    label Hero name:
    //- <input ref-heroName>
    <input #heroName>
    //- input(#heroName)
    button((click)='add(heroName.value); heroName.value=\'\'') Add

ul.heroes
    li(
        *ngFor='let hero of heroes',
        (click)='onSelect(hero)',
        [class.selected]='hero === selectedHero'
    )
        span.badge {{hero.id}}
        | {{hero.name}}
        button.del((click)='del(hero); $event.stopPropagation()') X
div(*ngIf='selectedHero')
    h2 {{selectedHero.name | uppercase}} is my hero
    button.goto-detail((click)='gotoDetail()') View Details